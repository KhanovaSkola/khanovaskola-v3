cd /tmp
git clone https://github.com/nicolasff/phpredis.git
cd phpredis
phpize
./configure
make && sudo make install

sudo rm /etc/php5/mods-available/curl.ini
sudo rm /etc/php5/mods-available/pgsql.ini
cat /vagrant/puphpet/files/xdebug.ini | sudo tee /etc/php5/fpm/conf.d/20-xdebug.ini
CONF="extension=redis.so\nextension=curl.so\nextension=pgsql.so"
echo "$CONF" | sudo tee -a /etc/php5/fpm/php.ini
echo "$CONF" | sudo tee -a /etc/php5/cli/php.ini
echo "$CONF" | sudo tee -a /etc/php5/cgi/php.ini

sudo service php5-fpm restart
sudo chmod 666 /var/run/php5-fpm.sock
