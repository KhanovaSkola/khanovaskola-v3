{var $robots = noindex}

{block content}
	{**
	 * @param int $code
	 *}
	<h1 n:block=title>{_"errors.$code.title"}</h1>

	<p>{_"errors.$code.text"}</p>

	<style>
		{var $bgImage = "$basePath/images/error/unicorn.gif"}
		html, body {
           min-height: 100%;
        }
		body {
			background-image: url('{$bgImage|noescape}');
			background-size: 100%;
			background-repeat: no-repeat;
			background-position: center bottom;
		}
	</style>
