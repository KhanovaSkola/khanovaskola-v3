{layout @layout.latte}
{var $email->subject = "Pozvánka Khanova škola"}
{block body}
	{**
	 * @param Student $invitee
	 * @param Student $teacher
     * @param Token $token
     * @param string $unsafe
     *}
	<p>
		{$invitee->vocative}, {$teacher->name} vás pozval{if $teacher->gender === 'female'}a{/if} do své třídy na Khanově škole.
	</p>
	<p>
		<center><b>
			<a href="{$token|token:$unsafe}">Potvrdit pozvánku</a>
		</b></center>
	</p>
