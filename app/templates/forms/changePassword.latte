{includeblock _error.latte}

<form n:name="form" class="form-horizontal" data-change-password-form>
	<div class="form-group{if $form['password']->errors} has-error{/if}">
		<label n:name="password">Heslo</label>
		<input n:name="password" type="password" class="form-control input-password" placeholder="Nové heslo">
		{include error, control => $form['password']}
	</div>
	<input n:name="save" value="Změnit heslo" class="btn btn-default">
</form>
