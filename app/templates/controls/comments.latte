{block content}
	{**
	 * @param Comment[] $comments
	 *}

	{control commentForm}
	<div js-comments>
		<div n:foreach="$comments as $comment">
			<p>
				{$comment->createdAt|date}
				<strong>{$comment->author->nominative}:</strong>
			</p>
			<p>
				{$comment->text}
				<a href="#" js-comments-reply data-reply-to="{$comment->id}" data-author="{$comment->author->vocative}">Odpovědět</a>
			</p>
		</div>
	</div>
