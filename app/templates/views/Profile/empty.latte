{var $pageName = 'dashboard-page'}
{var $headerBorder = FALSE}
{var $title = $profile->name}
{capture $explore}{_'profile.empty.explore'}{/capture}
{capture $learn}{_'profile.empty.learn'}{/capture}
{capture $learnMore}{_'profile.empty.learnMore'}{/capture}
{capture $study}{_'profile.empty.study'}{/capture}
{capture $try}{_'profile.empty.try'}{/capture}
{block content}
	{**
	 * @param App\Models\Rme\User             $profile
	 *}

	<main class="content">
        <div class="content-inner">
            <div class="inprogress-box">
                <div class="title">
                    <div class="title-inner">
                        <span>{_'profile.empty.youWillSee'}</span>
                    </div>
                </div>
                <div class="inprogress-border">
                    <div class="subject">
                        <h2>
                            <i class="icon icon-subject-history text-blue"></i>
                            <span>{_'profile.empty.interestingTopic'}</span>
                        </h2>
                        <div class="progress-wrapper">
                            <div class="progress">
                                <div class="progress-bar progress-bar-blue" style="width: {=mt_rand(10, 90)}%;"></div>
                            </div>
                            <span>âˆž &thinsp;%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="other-subjects">
            <div class="inner">
                <h1>
                  {_'profile.empty.startHere'}
                </h1>
                <div class="subjects">
                    {var $phrases = [
                        $explore,
                        $learn,
                        $learnMore,
                        $study,
                        $try,
                    ]}
                    {php shuffle($phrases)}

                    {foreach $suggestions as $content}
                        {var $block = $content->getRandomParent()}
                        {var $schema = $block ? $block->getRandomParent() : NULL}
                        <div class="subject">
                            <h4>
                                <i class="icon icon-{$schema|subjectIcon} text-{$schema|subjectColor}"></i>
                                {$content->title}
                            </h4>
                            <p>{$content->description}</p>
                            <a n:href="$content" class="btn">{=array_pop($phrases)}</a>
                        </div>
                    {/foreach}
                </div>
            </div>
        </div>
    </main>
