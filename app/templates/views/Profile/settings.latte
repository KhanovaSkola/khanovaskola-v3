{var $pageName = 'setting-page'}
{var $headerBorder = FALSE}
{var $title = $template->translate('pagetitles.setting-page')}
{block content}
	{**
	 * @param App\Models\Rme\User $profile
	 *}

	<main class="content">
    <div class="content-inner">
      <h1>Nastaven√≠</h1>
        {control profileForm}

			  <div n:if="!$userEntity->googleId">
                                {_'profile.settings.linkProfile'}
				{if !$userEntity->googleId}
					<a href="{$basePath}/auth/?do=googleLogin-open" class="btn btn-google">
	           <i class="icon icon-s-google"></i>
             <span>{_'auth.login.via.google'}</span>
	        </a>
				{/if}
			</div>

			<a n:href="Auth:changePassword">{_'profile.settings.changePassword'}</a>
    </div>
  </main>
