{var $pageName = 'search-page'}
{var $headerBorder = FALSE}
{block content}
	{**
	 * @param string $query
	 * @param Collection[] $results
	 *}

	<div class="container">
        <main class="content">
            <div class="content-inner">
                <section class="search-form">
                    {control search, label => 'Hled√°te'}
                    <ul class="list-unstyled">
                        <li n:foreach="$aggs as $ag">
                            {$ag['key']} ({$ag['doc_count']})
                        </li>
                    </ul>
                </section>
                <section class="search-result">
                    {foreach $results as $i => $content}
                        {var $block = $content->getEntity()->getRandomParent()}
                        {var $subject = $block ? $block->getRandomParent()->subject : $presenter->orm->subjects->getById(1)}
	                    <article>
	                        <div class="left text-{$subject->color}">
	                            <i class="icon icon-{$subject->icon}"></i>
	                        </div>
	                        <div class="right">
	                            <span class="title">
	                                <code>{$content->score|number:2}</code>
	                                <a tabindex="{$i+1}" n:href="$content">{$content->title|noescape}</a>
	                            </span>
	                            <p>{$content->description|noescape}</p>
	                        </div>
	                    </article>
					{/foreach}
                </section>
            </div>
        </main>
    </div>
