{define footerMobile}
	<div class="container footer-mobile-container">
		<div class="footer-mobile">
	        <strong>{_'footer.mobile.subjects'}</strong>
	        <div class="subjects" id="mobile-nav-subjects">
	            {foreach $subjects as $subject}
                    <a href="#" class="subject text-{$subject->color}" data-subject-open="{$subject->id}">
                        <span>{$subject->title}</span>
                        <i class="icon icon-{$subject->icon}"></i>
                    </a>
                    <ul class="schemas list-unstyled hidden" data-subject="{$subject->id}">
                        <li n:foreach="$subject->schemas as $schema">
                            <a n:href="$schema" class="schema text-{$subject->color}">
                                <span>{$schema->title}</span>
                            </a>
                        </li>
                    </ul>
                {/foreach}
	        </div>
	        <strong>{_'footer.mobile.siteName'}</strong>
	        <div class="about">
	            <p>
		            {_'footer.mobile.siteDescription1'} {$getRoundedContentCount()} {_'footer.mobile.siteDescription2'}
		        </p>
	            <a n:href="Text:about">{_'footer.mobile.about'}</a>
	        </div>

	    </div>

	    <div class="copyright">
	    </div>
    </div>

    <div class="mobile-nav">
        <div id="mobile-nav-append"></div>
        <div class="mobile-nav-search">
            {control search}
        </div>
        <div id="mobile-nav-subjects-clone"></div>
    </div>
{/define}
